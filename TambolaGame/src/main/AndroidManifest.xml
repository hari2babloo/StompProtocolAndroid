<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ua.naiksoftware.tambola">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:theme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.androidhari.tambola.FirstPage" />
        <activity android:name="com.androidhari.tambola.SignUp" />
        <activity android:name="com.androidhari.tambola.Signin" />
        <activity android:name="com.androidhari.tambola.HomeScreen" />
        <activity android:name="com.androidhari.tambola.ForgotPass" />
        <activity android:name="com.androidhari.tambola.ResetPass" />
        <activity android:name="com.androidhari.tambola.Wallet" />
        <activity android:name="com.androidhari.tambola.GameInfo" />
        <activity android:name="com.androidhari.tambola.WalletPurchasehistory" />
        <activity android:name="com.androidhari.tambola.PurchaseTicket" />
        <activity android:name="com.androidhari.tambola.Countdown" />
        <activity android:name="com.androidhari.tambola.AddMoney" />
        <activity android:name="com.androidhari.tambola.TransactionHistory" />
        <activity android:name="com.androidhari.tambola.Countdown2" />
        <activity android:name="com.androidhari.tambola.TestautoSelect" />
        <activity android:name=".Main2Activity" />
        <activity android:name="com.androidhari.ViewPager.MoneyTransactions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.androidhari.Fragment.CashOut" />
        <activity android:name="com.androidhari.Fragment.BankTransfer" />
        <activity android:name="com.androidhari.Fragment.PaytmTransfer"></activity>
    </application>

</manifest>